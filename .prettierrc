user_input = input("Enter a name: ")

email_address = None

with open('your_text_file.txt', 'r') as file:
    for line in file:
        name = line.split(';')[0].strip()
        if user_input.lower() == name.lower():
            if len(line.split(';')) >= 4:
                email_address = line.split(';')[3].strip()
                break

if email_address:
    print("Email Address:", email_address)
else:
    print("No match found or email address not available.")