def email(combobox_value):
    email_entry.delete(0, tk.END)  # Clear the entry

    if combobox_value:
        with open('App Files/CL_TechPhones 2.txt', 'r') as file:
            for line in file:
                if combobox_value.lower() in line.lower():
                    columns = line.split(';')
                    if len(columns) >= 4:
                        email_address = columns[3].strip()
                        email_entry.insert(0, email_address)
                        return

        email_entry.insert(0, 'No email on file')
