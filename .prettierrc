user_input = input("Enter a name: ")

email_address = None

with open('your_text_file.txt', 'r') as file:
    for line in file:
        if user_input.lower() in line.lower():
            columns = line.split(';')
            if len(columns) >= 4:  # Check if the line has enough columns
                email_address = columns[3].strip()
                break

if email_address:
    print("Email Address:", email_address)
else:
    print("No match found or email address not available.")