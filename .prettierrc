def email(combobox_value):
    global email_entry
    if 'bg' in root.config():
        bg_color = root.config('bg')[-1]
        if bg_color == 'cyan':
            with open('App Files/CL_TechPhones 2.txt', 'r') as file:
                for line in file:
                    if combobox_value.lower() in line.lower():
                        columns = line.split(';')
                        if len(columns) >= 4:  # Check if the line has enough columns
                            email_address = columns[3].strip()
                            email_entry.configure(state='normal')
                            email_entry.delete(0, tk.END)
                            email_entry.insert(0, email_address)
                    else:
                        email_entry.delete(0, tk.END)
                        email_entry.insert(0, 'No email on file')

        else:
            print('Pass')
